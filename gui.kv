#:import MDToolbar kivymd.toolbar.MDToolbar
#:import MDTextField kivymd.textfields.MDTextField
Main:
	Home:
		id:home
	Counter:
		id:counter

<Home>:
	name:"home"
	BoxLayout:
	BoxLayout:
		orientation:"vertical"
		size_hint:1,1-(root.ids.toolbar1.height/root.height)
		canvas:
			Rectangle:
				pos:self.pos
				size:self.size
				source:"media/new1.jpg"
		BoxLayout:
			size_hint:1,.13
			Label:
				text:"Youtube"
				font_size:self.width/13
				font_name:"media/Anydore.otf"
				color:0,0,0,1
				bold:True
		BoxLayout:
			size_hint:1,.12
			Label:
				text:"Subscriber Counter"
				font_size:self.width/14
				font_name:"media/Anydore.otf"
				color:0,0,0,1
				bold:True
		BoxLayout:
			size_hint:1,.3
			AnchorLayout:
				GridLayout:
					size_hint:.7,1
					spacing:5
					padding:5
					cols:1
					Label:
						id:warning
						color:1,0,0,1
					MDTextField:
						id:input
						hint_text:'"Name" or "Channel url" '
						on_text_validate:
							app.root.validate()
		BoxLayout:
			size_hint:1,.45
	MDFloatingActionButton:
		icon: 'arrow-right'
		elevation_normal: 9
		md_bg_color: 253/255,72/255,17/255,1
		text_color: 1,1,1,1
		x: root.width/2-dp(25) 
		y: root.height/4
		on_release:
			app.root.validate()
	MDToolbar:
		id:toolbar1
		title: "Youtube SC"
		pos_hint: {'center_x': .5, 'top':1}
		md_bg_color:1,0,0,1
		background_palette: 'DeepPurple'
		background_hue: 'A400'
		right_action_items: [['information-outline', lambda x: app.root.open_alert_dialog()]]
			
				
	

<Counter>:
	name:"counter"
	on_enter:
		app.root.channel_data()
	BoxLayout:
	BoxLayout:
		orientation:"vertical"
		size_hint:1,1-(root.ids.toolbar2.height/root.height)
		canvas:
			Rectangle:
				pos:self.pos
				size:self.size
				source:"media/new2.jpg"
		BoxLayout:
			size_hint:1,.10
		BoxLayout:
			size_hint:1,.14
			BoxLayout:
				size_hint:.1,1

			AsyncImage:
				id:imgs
				size_hint:.25,1
				source:""

			BoxLayout:
				size_hint:.65,1
				padding:5
			
				Label:
					id:channel_name
					text:""
					text_size: self.size
					halign: 'left'
					valign: 'middle'
					font_size:self.parent.width/12
					color:1,0,0,1

			
		BoxLayout:
			size_hint:1,.15

			Label:
				id:subs_num
				text:"Loading..."
				font_size:self.width/14
				color:0,0,0,1

		GridLayout:
			size_hint:1,.20
			cols:1
			Label:
				id:videos_num
				text:""
				markup:True
				font_size:20
				color:0,0,0,1
				size:self.texture_size
			Label:
				id:views_num
				text:""
				markup:True
				font_size:20
				color:0,0,0,1
				size:self.texture_size
		BoxLayout:
			size_hint:1,.35

				

	MDToolbar:
		id:toolbar2
		title: "Loading..."
		pos_hint: {'center_x': .5, 'top':1}
		md_bg_color: 1,0,0,1
		background_palette: 'DeepPurple'
		background_hue: 'A400'
		left_action_items: [['arrow-left', lambda x: app.root.change_scr()]]
	BoxLayout:

				

